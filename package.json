{
  "name": "marvel-super-heroes",
  "version": "^0.0.1",
  "description": "Marvel Super Heroes",
  "main": "src/index.js",
  "repository": "https://github.com/BertrandFritsch/marvel-super-heroes",
  "author": "bertrand.fritsch.in@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production PUBLIC_PATH=/marvel-super-heroes webpack -p",
    "build:watch": "cross-env NODE_ENV=development webpack-dev-server --progress",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "test:unit:watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit": "cross-env NODE_ENV=test jest --coverage"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.1",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.4",
    "@types/react": "^15.0.33",
    "@types/react-dom": "^15.5.1",
    "@types/react-hot-loader": "^3.0.2",
    "@types/react-redux": "^4.4.45",
    "@types/webpack": "^3.0.0",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.3",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^20.0.4",
    "node-sass": "^4.5.2",
    "react-addons-test-utils": "^15.6.0",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-jest": "^20.0.6",
    "ts-lint": "^4.5.1",
    "ts-node": "^3.1.0",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0",
    "webpack-notifier": "^1.5.0"
  },
  "dependencies": {
    "immutable": "^3.8.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.1.2",
    "react-stonecutter": "^0.3.5",
    "redux": "^3.7.1",
    "redux-saga": "^0.15.4",
    "reselect": "^3.0.0",
    "whatwg-fetch": "^2.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/*.spec.(ts|tsx|js)"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|pdf|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      ".*\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFiles": [
      "./jestSetup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "mapCoverage": true
  }
}
